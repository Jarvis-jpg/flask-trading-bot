# JARVIS AI Trading System - Environment Configuration
# Copy this to .env and fill in your actual values

# ═══════════════════════════════════════════════════════════════════════════════
# OANDA BROKER CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
OANDA_API_KEY=your_api_key_here
OANDA_ACCOUNT_ID=your_account_id_here
OANDA_API_URL=https://api-fxpractice.oanda.com/v3
OANDA_LIVE=false

# ═══════════════════════════════════════════════════════════════════════════════
# TRADING CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
TRADINGVIEW_WEBHOOK_URL=http://localhost:5000/webhook
DEFAULT_POSITION_SIZE=1000
MAX_DAILY_TRADES=20
MAX_DAILY_LOSS=500.0
RISK_PER_TRADE=0.02
MIN_CONFIDENCE=0.70

# ═══════════════════════════════════════════════════════════════════════════════
# AI CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
AI_LEARNING_RATE=0.001
AI_MODEL_PATH=models/jarvis_model.pkl
AI_MEMORY_PATH=jarvis_ai_memory.json
AI_CONFIDENCE_THRESHOLD=0.75

# ═══════════════════════════════════════════════════════════════════════════════
# FLASK WEB SERVER
# ═══════════════════════════════════════════════════════════════════════════════
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_SECRET_KEY=your_secret_key_here

# ═══════════════════════════════════════════════════════════════════════════════
# SECURITY & AUTHENTICATION
# ═══════════════════════════════════════════════════════════════════════════════
API_SECRET_KEY=your_api_secret_here
WEBHOOK_SECRET=your_webhook_secret_here
ADMIN_PASSWORD=your_admin_password_here

# ═══════════════════════════════════════════════════════════════════════════════
# LOGGING & MONITORING
# ═══════════════════════════════════════════════════════════════════════════════
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log
ERROR_LOG_FILE=logs/error.log
PERFORMANCE_LOG_FILE=logs/performance.log

# ═══════════════════════════════════════════════════════════════════════════════
# EMAIL NOTIFICATIONS (Optional)
# ═══════════════════════════════════════════════════════════════════════════════
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL=your_alert_email@gmail.com

# ═══════════════════════════════════════════════════════════════════════════════
# EXTERNAL INTEGRATIONS
# ═══════════════════════════════════════════════════════════════════════════════
TELEGRAM_BOT_TOKEN=your_telegram_token
TELEGRAM_CHAT_ID=your_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook

# ═══════════════════════════════════════════════════════════════════════════════
# SYSTEM LIMITS & SAFETY
# ═══════════════════════════════════════════════════════════════════════════════
MAX_DRAWDOWN_PERCENT=15.0
DAILY_LOSS_LIMIT_PERCENT=5.0
MAX_CONCURRENT_TRADES=3
EMERGENCY_STOP_LOSS_PERCENT=25.0

# ═══════════════════════════════════════════════════════════════════════════════
# BACKUP & RECOVERY
# ═══════════════════════════════════════════════════════════════════════════════
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/
